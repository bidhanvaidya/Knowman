    			</td><script>
												<% if folder.topics.empty?%>
												<%	total_topics = 1%>
												<%	else%>
												<%	total_topics = folder.topics.count%>
												<%end%>
												$(function() {
												$( "#<%=folder.created_at.hash%>" ).progressbar({
													value: <%=folder.topics.collect(&:progress).sum/total_topics%>});
														 var value = <%=folder.topics.collect(&:progress).sum/total_topics%>
													if (value ==0){
															$("#<%=folder.created_at.hash%>").css({ 'background': 'red' });
															$("#<%=folder.created_at.hash%> > div").css({ 'background': 'lightblue' });}
													else if (value <20){
															$("#<%=folder.created_at.hash%>").css({ 'background': 'white' });
															$("#<%=folder.created_at.hash%> > div").css({ 'background': 'red' });}
													
												  else if (value <50){
															$("#<%=folder.created_at.hash%>").css({ 'background': 'white' });
															$("#<%=folder.created_at.hash%> > div").css({ 'background': 'orange' });}
													else if (value <70){
															$("#<%=folder.created_at.hash%>").css({ 'background': 'white' });
															$("#<%=folder.created_at.hash%> > div").css({ 'background': 'lightblue' });}
													else{
															$("#<%=folder.created_at.hash%>").css({ 'background': 'white' });
															$("#<%=folder.created_at.hash%> > div").css({ 'background': 'lightgreen' });
													}
												});</script>
