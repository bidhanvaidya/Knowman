<table><tr><td align ="right"><b>Updates for <%= link_to @topic.title, edit_folder_topic_path(@topic.folder, @topic)  %> </td><td align = "right">
Created By: <b><%= @topic.user.firstName + " " +@topic.user.lastName %></b> On <b><%=@topic.created_at %></td></tr></table>

<table ><br>
  <tr align ="left" >
    
    <th>Updated By</th>
    <th>Time</th>
		<th>Progress Change</th>
    
  </tr>


<% @updates.each do |update| %>
  <tr>
		<td><%= update.user.firstName + " " + update.user.lastName %>
		<td><%= update.created_at %></td>
		<td><div id="<%=update.created_at.hash%>"></div></td>
<script>
				$(function() {
												$( "#<%=update.created_at.hash%>" ).progressbar({
																value: <%=update.progress_status%>});
													 var value = <%=update.progress_status%>
													if (value <20){
															$("#<%=update.created_at.hash%>").css({ 'background': 'white' });
															$("#<%=update.created_at.hash%> > div").css({ 'background': 'red' });}
													
												  else if (value <50){
															$("#<%=update.created_at.hash%>").css({ 'background': 'white' });
															$("#<%=update.created_at.hash%> > div").css({ 'background': 'orange' });}
													else if (value <70){
															$("#<%=update.created_at.hash%>").css({ 'background': 'white' });
															$("#<%=update.created_at.hash%> > div").css({ 'background': 'lightblue' });}
													else{
															$("#<%=update.created_at.hash%>").css({ 'background': 'white' });
															$("#<%=update.created_at.hash%> > div").css({ 'background': 'lightgreen' });
													}
												});</script>
  </tr>
<% end %>
</table>


<br />

<%= link_to 'Back', edit_folder_topic_path(@topic.folder, @topic) %>	
